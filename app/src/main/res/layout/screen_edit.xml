<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/etEditTitle"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:elevation="1dp"
        android:hint="Title..."
        android:maxEms="20"
        android:maxLines="1"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etEditContent"
        android:hint="Content..."
        android:gravity="top"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_width="0dp"
        android:padding="24dp"
        android:elevation="1dp"
        android:layout_height="0dp"
        android:layout_marginVertical="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btnCancelEdit"
        app:layout_constraintEnd_toEndOf="@id/etEditTitle"
        app:layout_constraintStart_toStartOf="@id/etEditTitle"
        app:layout_constraintTop_toBottomOf="@id/etEditTitle" />

    <Button
        android:id="@+id/btnCancelEdit"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="#FF0000"
        android:layout_marginBottom="16dp"
        android:text="Cancel"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAddEdit"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAddEdit"
        android:layout_width="160dp"
        android:paddingVertical="8dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/btnCancelEdit"
        android:text="Add"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#67BF00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>